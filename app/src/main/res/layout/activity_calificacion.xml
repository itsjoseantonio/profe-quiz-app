            <RatingBar
                android:id="@+id/ratingBarCalificacion2"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="24dp"
                android:isIndicator="true"
                android:numStars="1"
                android:rating="4.6"
                android:stepSize="0.1"
                app:layout_constraintBottom_toBottomOf="@+id/textViewNombre2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/textViewNombre2" />

            <TextView
                android:id="@+id/textViewComentario2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="m Ipsum is that iIt is a long established fact that a reader will be distracted by the readabIt is a long established fact that a reader will be distracted by the readab"
